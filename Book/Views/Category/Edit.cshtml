@model Book.Models.Category


<h4 class="mt-3">Edit Category</h4>
<hr />

    <div class="col-md-12">
        <div asp-validation-summary="All"></div>
        <form method="post" asp-action="Edit">
         <div class="mb-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
         </div>
         <div class="mb-3">
                <label asp-for="DisplayOrder" class="control-label"></label>
                <input asp-for="DisplayOrder" class="form-control" />
                  <span asp-validation-for="DisplayOrder" class="text-danger"></span>
         </div>   
            <button type="submit"   class="btn btn-primary" style="width:150px">Update</button>
            <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:150px" >Back to List</a>
        </form>
    </div>



    @section Scripts {
        @{
            <partial name="_ValidationScriptsPartial"/>
         }
     }
