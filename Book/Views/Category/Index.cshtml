@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container   p-3">
    <div    class="row  pt-4">
        <div    class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div    class="col-6  text-end">
            <a asp-action="Create"  asp-controller="Category"   class="btn btn-primary">
             <i class="bi bi-plus-circle"></i>&ensp;   Create New Category
            </a>
        </div>
    </div>
    <br />
 <table class="table table-borderd table-striped"    style="width:100%">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width=50%>
                    @obj.Name
                </td>
                <td width=30%>
                    @obj.DisplayOrder
                </td>
                <td width=20%>
                    <div class="btn-group" role="group" >
                        <a class="btn btn-primary" asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id">
                            <i class="bi bi-pencil-square"></i>&ensp;    Edit
                        </a>
                         <a class="btn btn-danger" asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id">
                            <i class="bi bi-trash-fill"></i>&ensp;   Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
 </table>
</div>